<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.maven.demo.repository.UserMapper">
 	
 	<select id="getUserById" resultType="com.maven.demo.entity.User" >
 			select * from user where id =#{id}
 	</select>
 	
 	<select id="getUsers" resultType="com.maven.demo.entity.User" >
 			select * from user 
 		<where>
		    <if test="name!=null and name!='' ">
				and name like #{name}
			</if>
		</where>
 		<if test="start!=null and size!=null">
			limit #{start},#{size}
		</if>
	</select>
	
	<select id="getTotalUser" parameterType="Map" resultType="Long">
		select count(*) from user
	</select>
	
	<insert id="addUser" parameterType="com.maven.demo.entity.User">
		insert into user(name,tel_num) values(#{name},#{telNum})
	</insert>
	
	<update id="updateUser" parameterType="com.maven.demo.entity.User" >
		update user
		<set>
			<if test="name!=null and name!='' ">
				name=#{name},
			</if>
			
			<if test="telNum!=null and telNum!='' ">
				tel_num=#{telNum},
			</if>
		</set>
		where id=#{id}
	</update>

	<delete id="deleteUser" parameterType="Integer">
		delete from user where id=#{id}
	</delete>
 </mapper>