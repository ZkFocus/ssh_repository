<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- 构造器注入  依据变量类型注入 -->
	<bean id="apple" class="com.hp.spring.constructor.Apple">
		<constructor-arg value="Red" type="String"></constructor-arg>
		<constructor-arg value="10" type="int"></constructor-arg>
		<constructor-arg value="2.5" type="float"></constructor-arg>
		
	</bean>
	
	<!-- 构造器注入 依据变量位置注入 -->
	<bean id="apple2" class="com.hp.spring.constructor.Apple">
		<constructor-arg value="Green" index="0"></constructor-arg>
		<constructor-arg value="6" index="1"></constructor-arg>
		<constructor-arg value="3.5" index="2"></constructor-arg>
		
	</bean>
	
	
</beans>
