<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<!-- id 用于指定唯一的备案 class 指定要实例化的类的全路径 scope 作用域 默认属性为singleton prototype 
		每次获取bean都会创建一个实例 -->
	<bean id="hw" class="com.spring.demo.entity.HelloWorld" lazy-init="true">
		 <property name="name" value="Kobe"></property>
		<!-- <constructor-arg name="name" value="Cury"></constructor-arg> -->

	</bean>

</beans>
